@model AutiCare.Models.Usuario

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">AutiCare</h1>
</div>

<hr/>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Index">
            <div class="form-group">
                <label class="control-label">Nome:</label>
                <input class="form-control" type="text" asp-for="Nome" />
            </div>
            <div class="form-group">
                <label class="control-label">Data de Nascimento:</label>
                <input class="form-control" type="date" id="DataNascimento" name="DataNascimento" />
            </div>
            <div class="form-group">
                <label class="control-label">Sexo:</label>
                <select class="form-control" name="Sexo" id="Sexo">
                    <option value="1">F</option>
                    <option value="0">M</option>
                    <option value="2">Não quero informar</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar Usuário" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


